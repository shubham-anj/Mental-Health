<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Active Clients</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <style>
        /* --- THEME COLORS FOR CONSISTENCY --- */
        :root {
            --color-bg-main: #2c3e50;         /* Main Body Background */
            --color-bg-card: #34495e;         /* List/Form Background */
            --color-accent-teal: #55a8a7;
            --color-accent-pink: #e83e6f;
            --color-text-light: #ecf0f1;
            --color-text-muted: #95a5a6;
        }

        /* General Theme Styling - Dark Mode */
        body {
            background-color: var(--color-bg-main); 
            color: var(--color-text-light);
            min-height: 100vh;
            font-family: sans-serif;
            padding: 20px;
        }

        /* Header and Title */
        .header-section {
            padding: 15px 0;
            margin-bottom: 25px;
            border-bottom: 1px solid #3e5267;
        }
        
        /* Search Bar Styling */
        .form-control-dark {
            background-color: var(--color-bg-card);
            border: 1px solid #3e5267;
            color: var(--color-text-light);
            padding: 10px 15px;
        }
        .form-control-dark::placeholder {
            color: var(--color-text-muted);
        }

        /* Client List Items */
        .client-list-item {
            background-color: var(--color-bg-card);
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            transition: background-color 0.2s;
            cursor: pointer;
        }
        .client-list-item:hover {
            background-color: #3e5267;
        }
        
        .client-status {
            font-size: 0.9em;
            font-weight: 600;
        }
        
        .status-active { color: var(--color-accent-teal); }
        .status-on-hold { color: #f0c419; } /* Yellow/Orange for contrast */

        .btn-action-icon {
            color: var(--color-text-muted);
            font-size: 1.1em;
            margin-left: 10px;
            transition: color 0.2s;
        }
        .btn-action-icon:hover {
            color: var(--color-accent-teal);
        }

        .btn-add-client {
            background-color: var(--color-accent-teal);
            color: white;
            font-weight: 600;
        }
        .btn-add-client:hover {
            background-color: #438786;
        }
    </style>
</head>
<body>

    <div class="container">
        
        <header class="header-section d-flex justify-content-between align-items-center">
            <a href="/user/therapPage" class="btn btn-sm text-decoration-none" style="color: var(--color-accent-teal);">
                <i class="fas fa-arrow-left me-2"></i> Dashboard
            </a>
            <h1 class="fs-4 fw-bold mb-0">My Active Clients</h1>
            <button class="btn btn-sm btn-add-client" id="addClientButton">
                <i class="fas fa-user-plus"></i> Add Client
            </button>
        </header>

        <div class="mb-4">
            <input type="text" class="form-control form-control-dark" id="clientSearch" placeholder="Search client name or ID...">
        </div>

        <div id="clientListArea">
            <p class="text-center text-muted mt-5" id="noClientsMessage">No active clients found. Click 'Add Client' to begin.</p>
        </div>
    </div>

    <div class="modal fade" id="addClientModal" tabindex="-1" aria-labelledby="addClientModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background-color: var(--color-bg-main); color: var(--color-text-light);">
          <div class="modal-header border-bottom border-secondary">
            <h5 class="modal-title" id="addClientModalLabel">Add New Client</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form id="addClientForm">
              <div class="mb-3">
                <input type="text" class="form-control form-control-dark" id="clientName" placeholder="Full Name" required>
              </div>
              <div class="mb-3">
                <input type="email" class="form-control form-control-dark" id="clientEmail" placeholder="Email (Secure Contact)" required>
              </div>
              <div class="mb-3">
                <select class="form-select form-control-dark" id="clientStatus" required>
                  <option value="" disabled selected>Select Status</option>
                  <option value="Active">Active</option>
                  <option value="On Hold">On Hold</option>
                  <option value="Archived">Archived</option>
                </select>
              </div>
              <button type="submit" class="btn btn-add-client w-100">Save Client</button>
            </form>
          </div>
        </div>
      </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const STORAGE_KEY_CLIENTS = 'therapistActiveClients';
        const clientListArea = document.getElementById('clientListArea');
        const addClientModal = new bootstrap.Modal(document.getElementById('addClientModal'));
        const addClientForm = document.getElementById('addClientForm');
        const clientSearch = document.getElementById('clientSearch');
        const noClientsMessage = document.getElementById('noClientsMessage');

        // Initial Client Data (for demo)
        const dummyClients = [
            { id: 1, name: 'Ravi Verma', email: 'ravi@example.com', status: 'Active', lastSession: 'Yesterday' },
            { id: 2, name: 'Priya Sharma', email: 'priya@example.com', status: 'On Hold', lastSession: '3 weeks ago' },
            { id: 3, name: 'Amit Singh', email: 'amit@example.com', status: 'Active', lastSession: 'Today' },
        ];

        // --- CORE FUNCTIONS ---

        function getClients() {
            const data = localStorage.getItem(STORAGE_KEY_CLIENTS);
            if (!data) {
                // If storage is empty, initialize with dummy data for first run
                localStorage.setItem(STORAGE_KEY_CLIENTS, JSON.stringify(dummyClients));
                return dummyClients;
            }
            return JSON.parse(data);
        }

        function saveClients(clients) {
            localStorage.setItem(STORAGE_KEY_CLIENTS, JSON.stringify(clients));
        }

        function renderClientList(filterTerm = '') {
            const clients = getClients();
            const lowerFilter = filterTerm.toLowerCase();
            
            const filteredClients = clients.filter(client => 
                client.name.toLowerCase().includes(lowerFilter) || 
                client.email.toLowerCase().includes(lowerFilter)
            );

            clientListArea.innerHTML = '';

            if (filteredClients.length === 0) {
                clientListArea.appendChild(noClientsMessage);
                return;
            }

            filteredClients.forEach(client => {
                const statusClass = client.status === 'Active' ? 'status-active' : 'status-on-hold';
                
                const clientItem = document.createElement('div');
                clientItem.className = 'client-list-item d-flex justify-content-between align-items-center';
                clientItem.innerHTML = `
                    <div>
                        <h5 class="mb-0">${client.name}</h5>
                        <small class="text-muted">${client.email}</small>
                        <span class="client-status ${statusClass} ms-3">${client.status}</span>
                    </div>
                    <div>
                        <small class="text-muted me-3">Last session: ${client.lastSession}</small>
                        
                        <a href="#" class="btn-action-icon" title="View Details" onclick="viewClientDetails('${client.id}')">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="#" class="btn-action-icon text-danger" title="Delete Client" onclick="deleteClient('${client.id}', event)">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                        <a href="#" class="btn-action-icon" title="Add Note" onclick="addSessionNote('${client.id}')">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                `;
                clientListArea.appendChild(clientItem);
            });
        }
        
        function addNewClient(name, email, status) {
            const clients = getClients();
            const newId = Date.now();
            
            const newClient = {
                id: newId,
                name: name,
                email: email,
                status: status,
                lastSession: 'Never'
            };
            
            clients.push(newClient);
            saveClients(clients);
            renderClientList();
        }

        window.deleteClient = function(id, event) {
            event.preventDefault();
            if (!confirm("Are you sure you want to permanently delete this client record?")) {
                return;
            }
            let clients = getClients();
            clients = clients.filter(client => client.id != id); // Filter out the deleted client
            saveClients(clients);
            renderClientList();
        }

        // Placeholder functions (will link to other pages in the full app)
        window.viewClientDetails = (id) => alert(`Viewing details for Client ID: ${id}`);
        window.addSessionNote = (id) => alert(`Adding session note for Client ID: ${id}`);

        // --- EVENT LISTENERS ---

        // 1. Open Modal
        document.getElementById('addClientButton').addEventListener('click', () => {
            addClientForm.reset(); // Clear form before opening
            addClientModal.show();
        });

        // 2. Submit Form
        addClientForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const name = document.getElementById('clientName').value;
            const email = document.getElementById('clientEmail').value;
            const status = document.getElementById('clientStatus').value;
            
            addNewClient(name, email, status);
            addClientModal.hide();
        });

        // 3. Search Filter
        clientSearch.addEventListener('input', (e) => {
            renderClientList(e.target.value);
        });

        // Initial render on page load
        renderClientList();
    </script>
</body>
</html>