<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wellness Tips & Strategies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <style>
        /* --- THEME COLORS FOR CONSISTENCY --- */
        :root {
            --color-bg-main: #2c3e50;         /* Main Body Background */
            --color-bg-card: #34495e;         /* Resource Card Background */
            --color-accent-teal: #55a8a7;
            --color-accent-pink: #e83e6f;
            --color-text-light: #ecf0f1;
            --color-text-muted: #95a5a6;
        }

        /* General Theme Styling - Dark Mode */
        body {
            background-color: var(--color-bg-main); 
            color: var(--color-text-light);
            min-height: 100vh;
            font-family: sans-serif;
            padding: 20px;
        }

        /* Header and Title */
        .header-section {
            padding: 15px 0;
            margin-bottom: 25px;
            border-bottom: 1px solid #3e5267;
        }
        
        .page-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 5px;
        }
        
        /* Search and Filter Controls */
        .form-control-dark, .form-select-dark {
            background-color: #3e5267;
            border: 1px solid #4a647d;
            color: var(--color-text-light);
        }
        .form-control-dark::placeholder {
            color: var(--color-text-muted);
        }

        /* Resource Card Styling */
        .resource-card {
            background-color: var(--color-bg-card);
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            border-left: 4px solid var(--color-accent-teal);
            transition: transform 0.2s;
            cursor: pointer;
        }
        .resource-card:hover {
            background-color: #3e5267;
            transform: translateY(-2px);
        }
        
        .resource-category {
            font-size: 0.8em;
            font-weight: 600;
            color: var(--color-accent-teal);
            margin-bottom: 5px;
            display: block;
        }
        
        .resource-description {
            font-size: 0.9em;
            color: var(--color-text-muted);
        }

        /* Filter Tags */
        .filter-tag {
            cursor: pointer;
            border: 1px solid var(--color-text-muted);
            color: var(--color-text-muted);
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.9em;
            transition: all 0.2s;
        }
        .filter-tag.active, .filter-tag:hover {
            background-color: var(--color-accent-teal);
            color: white;
            border-color: var(--color-accent-teal);
        }
    </style>
</head>
<body>

    <div class="container">
        
        <header class="header-section d-flex justify-content-between align-items-center">
            <a href="/user/userPage" class="btn btn-sm text-decoration-none" style="color: var(--color-accent-teal);">
                <i class="fas fa-arrow-left me-2"></i> Dashboard
            </a>
            <h1 class="page-title mb-0">Wellness Tips</h1>
            <div></div>
        </header>

        <p class="lead text-muted mb-4">Explore guidelines and helpful coping strategies.</p>

        <div class="row mb-4">
            <div class="col-md-7">
                <input type="text" class="form-control form-control-dark" id="tipSearch" placeholder="Search for breathing exercises, sleep hygiene...">
            </div>
            <div class="col-md-5 d-flex align-items-center gap-2 mt-3 mt-md-0">
                <span class="text-muted small">Filter by:</span>
                <div class="filter-tag active" data-category="All" id="allFilter">All</div>
                <div class="filter-tag" data-category="Stress">Stress</div>
                <div class="filter-tag" data-category="Sleep">Sleep</div>
                <div class="filter-tag" data-category="Motivation">Motivation</div>
            </div>
        </div>

        <div class="row" id="resourceList">
            </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sample Data for Tips
        const WELLNESS_TIPS = [
            { title: "The 4-7-8 Breathing Technique", category: "Stress", description: "A simple method to calm your nervous system quickly." },
            { title: "Journaling for Anxiety", category: "Stress", description: "Learn how to use your journal to process anxious thoughts." },
            { title: "Establish a Consistent Sleep Schedule", category: "Sleep", description: "Key rules for improving sleep hygiene and quality." },
            { title: "The 20-Minute Rule for Motivation", category: "Motivation", description: "How to overcome procrastination by starting small." },
            { title: "Digital Detox Strategies", category: "Motivation", description: "Tips to reduce screen time and boost focus." },
            { title: "Natural Supplements for Sleep", category: "Sleep", description: "Safe and natural options to consider before bed." },
            { title: "Mindful Eating Basics", category: "All", description: "Bring awareness to your meals to improve digestion and mood." },
        ];

        const resourceListContainer = document.getElementById('resourceList');
        const tipSearchInput = document.getElementById('tipSearch');
        const filterTags = document.querySelectorAll('.filter-tag');

        let currentCategory = 'All';

        function renderTips(data) {
            resourceListContainer.innerHTML = '';
            
            if (data.length === 0) {
                resourceListContainer.innerHTML = '<p class="text-center text-muted mt-5">No tips found matching your criteria.</p>';
                return;
            }

            data.forEach((tip, index) => {
                const col = document.createElement('div');
                col.className = 'col-md-6'; // Two columns per row
                col.innerHTML = `
                    <div class="resource-card" onclick="alert('Viewing: ${tip.title}')">
                        <span class="resource-category">${tip.category}</span>
                        <h5 class="mb-1">${tip.title}</h5>
                        <p class="resource-description">${tip.description}</p>
                    </div>
                `;
                resourceListContainer.appendChild(col);
            });
        }
        
        function applyFilters() {
            const searchTerm = tipSearchInput.value.toLowerCase();
            
            const filteredTips = WELLNESS_TIPS.filter(tip => {
                // 1. Category Filter
                const categoryMatch = currentCategory === 'All' || tip.category === currentCategory;
                
                // 2. Search Term Filter (checks title or description)
                const searchMatch = tip.title.toLowerCase().includes(searchTerm) || 
                                    tip.description.toLowerCase().includes(searchTerm);
                
                return categoryMatch && searchMatch;
            });
            
            renderTips(filteredTips);
        }

        // --- Event Listeners ---

        // 1. Category Tag Click
        filterTags.forEach(tag => {
            tag.addEventListener('click', function() {
                // Update active state visually
                filterTags.forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                
                // Update current category and apply filters
                currentCategory = this.dataset.category;
                applyFilters();
            });
        });

        // 2. Search Input Change
        tipSearchInput.addEventListener('input', applyFilters);

        // Initial Load (Show all tips)
        applyFilters();
    </script>
</body>
</html>